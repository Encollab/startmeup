<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.nlog-project.org/schemas/NLog.xsd NLog.xsd"
      autoReload="true"
      throwExceptions="false"
      internalLogLevel="Off" internalLogFile="c:\temp\nlog-internal.log">

  <variable name="logDir" value="C:/apps/logs/TW/${date:format=yyyy-MM-dd}" />

  <variable name="layout" value="${date:format=HH\:mm\:ss.fff} [${threadname}]: ${uppercase:${level}} ${message}" />

  <targets async="true">
    <target xsi:type="File" name="file" fileName="${logDir}/${processname}.log"
            layout="${layout}"
            encoding="utf-8" />
  </targets>
  <rules>
    <logger name="*" minlevel="Trace" writeTo="file" />
  </rules>
</nlog>